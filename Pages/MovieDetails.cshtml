@page "{id}"
@using MyWebApp.Models
@model MyWebApp.Pages.MovieDetailsModel

@{
    ViewData["Title"] = "DETAILS";
}

<style>
    #ReleaseYear {
        font-size: 20px;
        color: rgb(36, 36, 36);
        display: inline-block;
    }

    #MovieHour {
        font-size: 20px;
        color: rgb(37, 37, 37);
        display: inline-block;
    }

    #dot {
        display: inline-block;
    }

    .Poster {
        width: 278px;
        height: 412px;
        object-fit: cover;
        border-radius: 5px;
    }

    .Trailer {
        width: 700px;
        height: 412px;
        border-radius: 5px;
    }

    .movie-container {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-bottom: 10px;
    }

    .genres {
        font-family: Arial, sans-serif;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .genres strong {
        font-weight: bold;
        margin-right: 10px;
    }

    .genres ul {
        display: flex;
        list-style: none;
        padding: 0;
        margin: 0;
        gap: 10px;
    }

    .genres ul li {
        padding: 5px 10px;
        border: 1px solid #a8a7a7;
        border-radius: 20px;
        background-color: #dddcdc;
        font-size: 14px;
        color: #333;
        text-align: center;
    }

    .genres ul li:hover {
        background-color: #fbfafa;
        cursor: pointer;
    }
</style>

<h1>@Model.Movie?.Title</h1>

<div>
    <p id="ReleaseYear">@Model.Movie?.Releaseyear</p>
    <p id="dot"> â€¢ </p>
    <p id="MovieHour">@Model.Movie?.Moviehour</p>
</div>

<div class="movie-container">
    <img src="@Model.Movie?.Posterurl" alt="@Model.Movie?.Title poster" class="Poster">
    <iframe src="@Model.Movie?.Trailer" frameborder="0" class="Trailer"></iframe>
</div>

<div class="genres">
    <ul>
        @foreach (var genre in Model.Movie?.Genres ?? new List<Genre>())
        {
            <li>@genre?.Name</li>
        }
    </ul>
</div>

<div class="long_description">
    <p><strong>@Model.Movie?.Description</strong></p>
</div>

<div>
    <div class="director">
        <p><strong>Director:</strong> @Model.Movie?.Director</p>
    </div>
    <div class="writer">
        <p><strong>Writer:</strong> @Model.Movie?.Writer</p>
    </div>
    <div class="actors">
        <strong>Actors:</strong>
        <ul>
            @foreach (var actor in Model.Movie?.Actors ?? new List<Actor>())
            {
                <li>@actor?.Name</li>
            }
        </ul>
    </div>
</div>

<div>
    <h2>Add a Comment</h2>
    <form method="post">
        <textarea name="CommentContent" placeholder="Write your comment here..."
            required>@Model.CommentContent</textarea>
        <input type="hidden" name="MovieId" value="@Model.Movie?.Movieid" />
        <button type="submit">Submit</button>
    </form>

</div>


<div>
    <h2>Comments</h2>
    @if (Model.Comments.Any())
    {
        <ul>
            @foreach (var comment in Model.Comments)
            {
                <li>
                    <strong>@comment.CreatedAt.ToString("yyyy-MM-dd HH:mm"):</strong> @comment.Content
                </li>
            }
        </ul>
    }
    else
    {
        <p>No comments yet. Be the first to comment!</p>
    }
</div>
